#vertex_shader
#version 130

in vec3 ourPosition;
in vec4 ourColor;

out vec4 fragColor;

uniform mat4 transform;

void main()
{
	gl_Position = transform * vec4( ourPosition, 1.0f );
	fragColor = ourColor;
}

#fragment_shader
#version 130

in vec4 fragColor;

out vec4 color;

//uniform sampler2D textures[32];

void main()
{
	color = fragColor;
}
