#vertex_shader
#version 130

in vec3 ourPosition;
in vec2 texCoords;

out vec2 fragTexCoords;

void main()
{
	gl_Position = vec4( ourPosition, 1.0f );
	fragTexCoords = vec2( texCoords.x, 1.0f - texCoords.y );
}

#fragment_shader
#version 130

in vec2 fragTexCoords;

out vec4 color;

uniform sampler2D ourTexture;

void main()
{
	color = texture( ourTexture, fragTexCoords );
}
